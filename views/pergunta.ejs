<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <!--tipo e para onde aponta -->
        <form method="POST" action="/responder">
            <h4>Responda</h4>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta =>{ %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo%></p>
                </div> 
            </div>
            <br>
        <% })%>
    </div>
</body>
<style>
        .container{
        max-width:1000px;
    }
</style>
<%- include('partials/footer.ejs') %>